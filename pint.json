{
    "preset": "laravel",
    "rules": {
        "declare_strict_types": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "single_quote": true,
        "yoda_style": {
            "equal": false,
            "identical": false,
            "less_and_greater": false
        }
    }
}
